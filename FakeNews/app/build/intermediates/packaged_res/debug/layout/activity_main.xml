<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="FAKE NEWS GENERATOR"
            android:textSize="30sp" />

        <ToggleButton
            android:id="@+id/toggleButtonLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="RUS"
            android:textOn="ENG"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/textViewMainPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewMainPersonRUS" />

        <EditText
            android:id="@+id/editTextMainPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:onClick="onClick"
            android:text="@string/editTextMainPersonRUS" />

        <TextView
            android:id="@+id/textViewAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewActionRUS" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonGenerateRUS"
            android:onClick="onClick"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>