<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetTextOptionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color" />

        <RadioGroup
            android:id="@+id/radioGroupColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/radioButtonColorGreen">

            <RadioButton
                android:id="@+id/radioButtonColorRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red" />

            <RadioButton
                android:id="@+id/radioButtonColorBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue" />

            <RadioButton
                android:id="@+id/radioButtonColorGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Green" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Position:" />

        <RadioGroup
            android:id="@+id/radioGroupPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/radioButtonPositionLeft">

            <RadioButton
                android:id="@+id/radioButtonPositionLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Left" />

            <RadioButton
                android:id="@+id/radioButtonPositionMiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Middle" />

            <RadioButton
                android:id="@+id/radioButtonPositionRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Right" />
        </RadioGroup>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="onClick"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>